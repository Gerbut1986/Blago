</head>

<body class="img js-fullheight" id="bg" style="">
    <style>
        #bg {
            /*background: url(../../Images/login.jpg) no-repeat fixed;*/
            width: 100%;
            background-color:white;
        }

        #fld {
            background-color: #b0ae2c;
            border-radius: 0px;
           margin-top:-6px
        }

        #btn {
            border-radius: 0px;
        }

            #btn:hover {
                border-radius: 0px;
                background-color: #b0ae2c;
            }
    </style>
    @*style="background-color: #b0ae2c">*@
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <section class="ftco-section">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-6 text-center mb-5">
                        <h2 class="heading-section">ВХОД В ЛИЧНЫЙ КАБИНЕТ</h2>
                    </div>
                </div>
                <div class="row ">                    
                    <div class="col-md-8 col-lg-6" style="">
                        <div class="login-wrap p-0" style="">
                            <div class="col-md-6 col-lg-4" style="height:180px;width:100%">                            
                            </div>
                            @*<h3 class="mb-4 text-center">Ты владелец?</h3>*@
                            <form action="#" class="signin-form">
                                <div class="form-group">
                                    @Html.TextBoxFor(u => u.Email, new { placeholder = "E-mail:", @class = "form-control", id = "fld" })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })<br />
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(u => u.Password, new { placeholder = "Пароль:", @class = "form-control", id = "fld" })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })<br />
                                </div>
                                <div class="form-group">
                                    <button type="submit" id="btn" style="font-weight:bold;color:white" 
                                            class="form-control btn btn-primary submit px-3">ВОЙТИ</button>
                                </div>
                                <div class="form-group d-md-flex">
                                    <div class="w-50">
                                   
                                    </div>
                                    <div class="w-50 text-md-right">
                                        <a href="#" style="color: #fff">ЗАБЫЛИ ПАРОЛЬ?</a>
                                    </div>
                                </div>
                            </form>
                            <p class="text-center">
                                &mdash;
                                @Html.ActionLink("Вернуться назад", "MainPage", "Home", null, new { @class = "underlineHover", style = "font-size:x-large;text-decoration:none;color:white" })
                                &mdash;
                            </p>
                        </div>
                    </div>

                    <div class="col-md-3 col-lg-4"  style="">
                        <div class="login-wrap p-0">
                            <img src="~/Images/login.jpg" width="" height="600px" />
                        </div>
                    </div>
                        </div>
                    </div>
</section>
    }
    <script src="@Url.Content("~/Content/AdminPart/LoginForm/theme-bootstrap-login-form-20/js/jquery.min.js")"></script>
    <script src="@Url.Content("~/Content/AdminPart/LoginForm/theme-bootstrap-login-form-20/js/popper.js+bootstrap.min.js+main.js.pagespeed.jc.9eD6_Mep8S.js")"></script>
